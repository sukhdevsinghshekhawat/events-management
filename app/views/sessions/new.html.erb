<div class="auth-card">
  <h2>Login to your account</h2>

  <%= form_with(url: login_path, scope: :session, local: true, data: { turbo: false } ,class: "auth-form") do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "you@college.edu" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Login", class: "btn" %>
    </div>
  <% end %>

  <p class="small">New student? <%= link_to "Sign up", signup_path %></p>
</div>
