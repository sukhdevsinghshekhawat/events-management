<div class="auth-card">
  <h2>Super Admin Login</h2>
  <%= form_with(url: superadmin_login_path, local: true, data: { turbo: false } ,class: "auth-form") do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "you@college.edu" %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Login as Super Admin", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
